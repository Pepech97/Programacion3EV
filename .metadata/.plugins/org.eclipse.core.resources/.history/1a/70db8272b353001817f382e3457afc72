import java.util.Arrays;

public class Vagon {
	private Integer num;
	private int[] asientos = new int [10];
	private static Integer siguiente=1;
	
	public Vagon() {
		this.num = siguiente;
		siguiente++;
		if (siguiente==3) {
			siguiente=1;
		}
	}

	@Override
	public String toString() {
		return "VAGON " + num + "\nAsientos" + Arrays.toString(asientos) + "\n";
	}
	
	
}
